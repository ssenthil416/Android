<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <View
        android:id="@+id/circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_for_spinner"
        android:background="@drawable/circle" />


    <LinearLayout
        android:id="@+id/redLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_top_for_spinner">
        <TextView
            android:textStyle="bold"
            android:text="@string/red"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/spinnerForRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/greenLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/redLayout"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_top_for_spinner">

        <TextView
            android:textStyle="bold"
            android:text="@string/green"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/spinnerForGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="1dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greenLayout"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_top_for_spinner">

        <TextView
            android:textStyle="bold"
            android:text="@string/blue"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/spinnerForBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="1dp" />

    </LinearLayout>





</RelativeLayout>
